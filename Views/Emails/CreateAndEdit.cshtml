@using batchmailr.ViewModels
@model EmailsViewModel

<h2>@ViewData["pageTitle"]</h2>

<form method="post">
    <div class="form-group">
        <input type="text" class="form-control" asp-for="@Model.EmailSubject" />
    </div>
    <div class="form-group">
        <textarea class="form-control" asp-for="@Model.EmailHtmlContent"></textarea>
    </div>
    <button type="submit" class="btn btn-dark">Create e-mail</button>
</form>