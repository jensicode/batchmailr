@using batchmailr.Models
@model IEnumerable<TextTemplate>
@{ var textTemplates = Model; }

<h1>Text templates</h1>

@if (textTemplates.Any())
{
    <p><a href="TextTemplates/Create" class="btn btn-dark">Create text template</a></p>

    <div class="table-responsive mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (TextTemplate item in textTemplates)
                {
                    <tr>
                        <td>@item.TextTemplateName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="mt-2">You have not created any text template(s)</p>
    <p><a href="TextTemplates/Create" class="btn btn-dark">Create text template</a></p>
}